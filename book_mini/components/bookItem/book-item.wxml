<!--components/bookItem/book-item.wxml-->
<view class="book-container" bind:tap="onTap">
  <image src="{{book.image}}" />
  <view class="description">
    <view class="title">{{book.title}}</view>
    <view class="author">{{book.author}}</view>
    <view class="foot">
      <text>{{book.fav_nums}} 喜欢</text> · <text>33 短评</text>
    </view>
  </view>
</view>
