.detail_btn {
    width: 80%;
    height: 100rpx;
    background-color: #0984e3;
    border-radius: 50rpx;
    position: absolute;
    left: 50%;
    bottom: 50rpx;
    transform: translateX(-50%);
    text-align: center;
    color: #ffffff;
    line-height: 100rpx;
    letter-spacing: 10rpx;
    /* background-image: linear-gradient(#0984e3 40%, #0a74c5, #0984e3); */
    /* background-image: linear-gradient(#3498db 40%, #2980b9, #3498db); */
    background-image: linear-gradient(#54a0ff 40%, #2e86de, #54a0ff);
    box-shadow: 0px 2px 3px 0px #0a74c5;
}
/* 电影类 */
.front_book .movie_title {
    width: 163rpx;
    height: 336rpx;
    background-image: url('http://localhost:3000/images/movie_title.png');
    background-size: 100% 100%;
    position: absolute;
    left: 20rpx;
    bottom: 40rpx;
}
