/* pages/find/find.wxss */
.container {
    background-color: #edeef0;
    min-height: 100vh;
    padding: 40rpx 60rpx 0 60rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.userinfo {
    height: 100rpx;
    display: flex;
    flex-direction: row;
}
.userinfo .avatar {
    width: 100rpx;
    height: 100rpx;
}
.userinfo .nick_date {
    display: flex;
    flex-direction: column;
    justify-content: center;
    margin-left: 20rpx;
}
.userinfo .nick_date .nick_name {
    font-size: 28rpx;
    color: #4a4a4a;
}
.userinfo .nick_date .pubdate {
    color: #b3b3b3;
    font-size: 20rpx;
    line-height: 36rpx;
}
.card {
    width: 100%;
    height: 850rpx;
    background-color: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin-bottom: 40rpx;
    border-radius: 20rpx;
}
.card .poster {
    width: 100%;
    height: 350rpx;
}
.card .footer {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    box-shadow: 0px -4px 2px -5px #000;
    position: absolute;
    bottom: 0;
}
.card .title {
    margin: 50rpx 0;
}
.card .content {
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    text-align: center;
}
.footer .comment {
    flex: 1;
    text-align: center;
}
.footer .favor {
    flex: 1;
    text-align: center;
}
.card .footer .icon {
    width: 44rpx;
    height: 44rpx;
    vertical-align: middle;
}
.footer .num {
    color: #9b9b9b;
    font-size: 20rpx;
    margin-left: 20rpx;
}