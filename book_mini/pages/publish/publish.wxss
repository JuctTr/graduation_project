/* pages/publish/publish.wxss */
.container {
    background-color: #edeef0;
    min-height: 100vh;
}
.add_poster_box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 300rpx;
}
.add_poster {
    width: 200rpx;
    height: 200rpx;
    text-align: center;
    background-color: #d5d8db;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.add_poster::after {
    border: none;
}
.add_poster .upload {
    width: 50rpx;
    height: 50rpx;
}
.add_poster .upload_text {
    font-size: 32rpx;
}
.add_poster .upload_img {
    width: 200rpx;
    height: 200rpx;
}

.add_info {
    width: 100%;
    min-height: 460rpx;
    padding: 0 80rpx;
    box-sizing: border-box;
    background-color: #ffffff;
}
.add_info .title {
    height: 80rpx;
    line-height: 80rpx;
    box-shadow: 0px 4px 2px -5px #000;
    text-align: center;
}
.add_info .content {
    padding: 10rpx 0;
    box-sizing: border-box;    
}
.add_info .author {
    height: 80rpx;
    line-height: 80rpx;
    box-shadow: 0px -4px 2px -5px #000; 
    text-align: center;
}
.category {
    text-align: center;
    min-height: 150rpx;
    line-height: 150rpx;
}
.category .radio_group {
    display: flex;
    justify-content: space-around;
    font-size: 32rpx;

}
.submit_box {
    /* text-align: center; */
    display: flex;
    flex-direction: row;

}
.reset_btn {
    background-color: #ffffff;
    border: 1px solid #3963bc;
    color: #3963bc;
    padding: 0 80rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
}
.reset_btn:active {
    background-color: #dddddd;
}
.submit_btn {
    background-color: #3963bc;
    color: #ffffff;
    padding: 0 80rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
}
.submit_btn:active {
    background-color: #dddddd;
    color: #3963bc;
    border: 1px solid #3963bc;
}
.reset_btn::after {
    border: none;
}
.submit_btn::after {
    border: none;
}
