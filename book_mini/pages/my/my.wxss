/* pages/my/my.wxss */
.container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #edeef0;
}
.auth_avatar {
    width: 100%;
    height: 50vh;
    background-image: url('http://localhost:3000/images/auth_bg.png');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.auth_btn {
    width: 100rpx;
    height: 100rpx;
    padding: 0;
    border-radius: 50%;
    
}
.auth_btn .avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.nickname {
    margin-top: 20rpx;
    color: #edeef0;
}
.banner {
    width: 97rpx;
    height: 42rpx;
    margin-top: 30rpx;
}