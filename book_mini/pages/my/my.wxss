/* pages/my/my.wxss */
.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #edeef0;
}
.auth_avatar {
    width: 100%;
    height: 552rpx;
    background-image: url('http://192.168.0.13:3000/images/auth_bg.png');
    background-size: 100% 100%;
    background-repeat: no-repeat;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.auth_btn {
    width: 100rpx;
    height: 100rpx;
    padding: 0;
    border-radius: 50%;
    
}
.auth_btn .avatar{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.nickname {
    margin-top: 20rpx;
    color: #edeef0;
}
.banner {
    width: 97rpx;
    height: 42rpx;
    margin-top: 30rpx;
}

.preview-container {
    width: 690rpx;
    display: flex;
    flex-direction: row;
    padding:0 30rpx;
    flex-wrap:wrap;
    justify-content: space-between;
}

.preview {
    margin-bottom: 30rpx;
}

.like-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
}

.headline {
    margin-top: 30rpx;
    width: 97rpx;
    height: 42rpx;
}

.study {
    width: 88rpx;
    height: 88rpx;
    position: absolute;
    top: 40rpx;
    right: 45rpx;
}